<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/attendance_admin.css">
<link rel="stylesheet" href="/css/footer.css">

</head>

<body>
  <%- include('../includes/navigation-admin.ejs') %>

  <h1 id="Attendance">Attendance</h1>

  <main>
    <form action="/admin/attendance" method="POST">

      <% if (Object.keys(students).length !== 0) { %>

        <div class="grid">
          <% for ( let stdName in students ) { %>
            
            <% let details = students[stdName]; %>

            <div class="student-card">
              <img src='../images/Profile.png' alt='Profile'>

              <p> <%= stdName %> </p>
              <input type="hidden" name="name" value="<%= stdName %>">

              <p> <%= details.rollno %> </p>
              <input type="hidden" name="rollno" value="<%= details.rollno %>">

              <select name="attendance" id="attendance" class="attendance-dropdown" required>
                <option value="present" selected>Present</option>
                <option value="absent">Absent</option>
              </select>
            </div>

          <% } %>

        </div>

        <div class="btn">
          <button type="submit"> Submit </button>
        </div>

      <% } else { %>
        <h1> Nothing Yet !! </h1>
      <% } %>

    </form>

  </main>

  <section class="call-to-action">
    <h2>Take Control of Attendance Now!</h2>
    <p>Empower your teaching with easy attendance management.</p>
    <button id="btn-j">Update</button>
    <button id="btn-j">Modify</button>
  </section>

<%- include('../includes/end.ejs') %>